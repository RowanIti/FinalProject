
@{
    ViewBag.Title = "Index";
}

<h2 style="color:darkcyan">Welcome to Ace Insurance</h2>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Content/Site.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" style="height:250px">
                <div class="item active">
                    <img class="img-responsive center-block" src="~/Content/Images/car.png" alt="Second slide" style="max-height:inherit">
                    <div class="carousel-caption">
                        <p id="p1">Live worry free with our comprehensive services</p>
                    </div>
                </div>

                <div class="item">
                    <img class="img-responsive center-block" src="~/Content/Images/motorbike.png" alt="First slide" style="max-height:inherit">
                </div>

                <div class="item">
                    <img class="img-responsive center-block" src="~/Content/Images/car.png" alt="Third slide" style="max-height:inherit">
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <h2 id="About_h2" style="text-align:left;">About Ace Insurance</h2>
            <p>One of the leading vehicle insurance companies in the southern hemisphere, click here to find out more!</p>
            <button style="align-self:center" onclick="location.href = 'https://localhost:44352/Insurance/About';" type="button" class="btn btn-success">About Us</button>
        </div>
    </div>




    <div class="container">
        <div class="row">
            <h2 id="Service_h2" style="text-align:center;">Our Services</h2>
        </div>
    </div>
    <div class="container" style="width:100%">
        <div class="col-sm-4" style="width:50%">
            <div class="text-center" style="height:417px; border-right:1px dashed;">
                <img src="~/Content/Images/car-policy.png" alt="car-policy.png"/>
                <h3>Car</h3>
                <p style="text-align:center">Live worry free with our comprehensive policy, click below to learn more!</p>
                <button onclick="location.href = 'https://localhost:44352/Insurance/Services';" type="button" class="btn btn-success">Learn More</button>
                
            </div>
        </div>
        <div class="col-sm-4" style="width:50%">
            <div class="text-center" style="height:417px;">
                <img src="~/Content/Images/motorbike-policy.png" alt="motorbike-policy.png" />
                <h3>Motorcycle</h3>
                <p style="text-align:center">We offer both car and motorcycle policies, click here to learn more</p>
                <button onclick="location.href = 'https://localhost:44352/Insurance/Services';" type="button" class="btn btn-success">Learn More</button>
            </div>
        </div>
    </div>
    <div class="container"></div>

</body>
</html>
