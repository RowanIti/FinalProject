
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="banner-container" style="width:1400px;height:200px">
    <img src="~/Content/Images/contactbanner.png" />
</div>

<h2>Contact Us</h2>
<p>We'd love to hear from you, our team is always ready to help</p>

    <form >
        <div class="col-md-offset-2 col-md-8">
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input class="form-control" type="email" placeholder="Example@email.com" />

            </div>
            <div class="form-group">
                <label for="inputName">Name</label>
                <input class="form-control" type="text" placeholder="Enter name here" />
            </div>
            <div class="form-group">
                <label for="inputSubject">Subject</label>
                <input class="form-control" type="text" placeholder="Subject" />
            </div>
            <div class="form-group">
                <label for="inputMessage">Message</label>
                <textarea class="form-control" placeholder="Your message here"></textarea>
            </div>

            <input type="submit" value="Send" class="btn btn-success btn-lg btn-block" />
        </div>
</form>

